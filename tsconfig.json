{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "types": [
      "vue",
      "node",
      "vite/client",
      "vue-router",
      "react",
      "react-dom",
      "@ue/icon",
      "cloudflare-r2",
      "@js-lion/upload",
      "@ue/modal",
      "@ue/form",
      "element-plus/global",
      "@fengqiaogang/dblist",
      "@tiptap/extension-document"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "@ue/http": [
        "./src/libs/http/index.ts"
      ],
      "@js-lion/upload": [
        "./src/libs/upload/upload.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "vite.config.ts"
  ]
}
